<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin10dp"
    android:background="@android:color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <TextView
        android:id="@+id/card_view_add_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center_horizontal"
        android:textColor="@color/colorSecondGrey"
        android:textStyle="bold"
        android:textSize="@dimen/text15sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            >
            <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/ping_lovando"
                android:id="@+id/card_view_ll1"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin10dp"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:layout_marginRight="@dimen/margin10dp">
                    <TextView
                        android:id="@+id/card_view_missions_doctor_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/textDefault"
                        android:fontFamily="@font/nunito_semibold"
                        />
                    <ImageView
                        android:layout_width="@dimen/margin20dp"
                        android:layout_height="@dimen/margin20dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_cancel"
                        android:id="@+id/card_view_delete"

                        />

                </RelativeLayout>
                <TextView
                    android:id="@+id/card_view_missions_address_textVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:textSize="@dimen/text12sp"
                    android:textColor="@color/xaki"
                    android:fontFamily="@font/nunito_semibold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:maxLines="1"
                    android:textColor="@color/xaki"
                    android:textSize="@dimen/text12sp"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:id="@+id/card_view_missions_type_textView"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/xaki"
                    android:layout_marginTop="@dimen/margin10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin10dp">
                    <TextView
                        android:id="@+id/fragment_mission_card_view_visit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text12sp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        />
                    <ImageView
                        android:layout_width="@dimen/margin20dp"
                        android:layout_height="@dimen/margin20dp"
                        android:src="@drawable/ic_play"
                        android:id="@+id/card_view_button_play"
                        android:layout_alignParentRight="true"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/card_view_time_start"
                        android:layout_marginRight="@dimen/margin20dp"
                        android:layout_toLeftOf="@+id/card_view_time_end"
                        android:visibility="gone"
                        android:fontFamily="@font/open_sans_semibold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/card_view_time_end"
                        android:visibility="gone"
                        android:fontFamily="@font/open_sans_semibold"
                        />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView></LinearLayout>
    </LinearLayout>




</LinearLayout>