<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pharmacy_new_orders_medications_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/textDefault"
            android:textSize="@dimen/text15sp"
            android:layout_weight="8"
            android:paddingBottom="@dimen/margin15dp" />
        <EditText
            android:id="@+id/pharmacy_new_orders_button_medications_edit_text"
            android:layout_width="@dimen/pharmacy_edit_60dp"
            android:layout_height="@dimen/pharmacy_edit_40dp"
            android:inputType="number"
            android:textSize="@dimen/text15sp"
            android:layout_weight="1"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pharmacy_new_orders_stock_text_view"
        android:textColor="@color/textDefault"
        android:textSize="@dimen/text15sp"
        android:layout_marginTop="@dimen/margin5dp"
        android:gravity="right"
        android:text="В складу осталось : 1000"
        android:layout_marginRight="@dimen/margin5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text15sp"
            android:id="@+id/pharmacy_new_orders_full_buy"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text15sp"
            android:id="@+id/pharmacy_new_orders_half_buy"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text15sp"
            android:id="@+id/pharmacy_new_orders_semi_buy"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black"
        android:layout_below="@id/pharmacy_new_orders_stock_text_view"
        android:layout_marginTop="@dimen/margin5dp"/>



</LinearLayout>